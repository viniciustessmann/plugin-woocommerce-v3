/*
 * Tabs
 */

.tabs
	filter drop-shadow($shadow-large-down)

	&__menu
		@extend $type-default-bold

		overflow hidden
		overflow-x auto
		position relative
		display inline-flex
		max-width 100%
		border-top-left-radius $size-mini
		border-top-right-radius $size-mini

		&:after
			content ''
			absolute top 100% left 0 right 0
			height 10px // Just to work the shadow
			box-shadow $shadow-large-down
			z-index tabs shadow

	&__button
		padding $size-little $size-grand
		font-size $size-small
		text-align center
		color $theme-neutral-dark
		background $theme-neutral-shine
		box-shadow $shadow-default

		&--active
		&:focus
			position relative
			text-decoration underline
			text-transform uppercase
			color $theme-primary
			z-index tabs active

		// @stylint off
		&::-moz-focus-inner
			border none
		// @stylint on

	&__content
		overflow hidden
		display none
		background $theme-neutral-shine
		border-radius $size-mini
		border-top-left-radius 0

		&--active
			display block
